<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.myfinda" 
	   versionCode= "17"
       version = "2.0.0">
		
    <name>MyFinda</name>

    <description>
	MyFinda
    </description>

    <author href="http:creativeyr.co.ke" email="d.mburu@creative.co.ke">
        Blue Antelope
    </author>
    
    <access origin="*" />
	
	<allow-intent href="whatsapp:*" />
	
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
   </feature>
    <preference name="phonegap-version" value="3.7.0" /> 
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
   
    <icon src="icon.png" />
	
    <icon src="themes/images/icon-36.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="themes/images/icon-48.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="themes/images/icon-72.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="themes/images/icon-96.png"  gap:platform="android"    gap:density="xhdpi" />
	
	
	
	<!-- iPhone 6 / 6+ -->
	<icon src="themes/images/icon-180.png" gap:platform="ios" width="180" height="180" />
	

	<!-- iPhone / iPod Touch  -->
	<icon src="themes/images/icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="themes/images/icon-120.png" gap:platform="ios" width="120" height="120" />

	<!-- iPad -->
	<icon src="themes/images/icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="themes/images/icon-152.png" gap:platform="ios" width="152" height="152" />

	<!-- Settings Icon -->
	<icon src="themes/images/icon-29.png" gap:platform="ios" width="29" height="29" />
	<icon src="themes/images/icon-58.png" gap:platform="ios" width="58" height="58" />

	<!-- Spotlight Icon -->
	<icon src="themes/images/icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="themes/images/icon-80.png" gap:platform="ios" width="80" height="80" />
	
	
	<!-- iPhone / iPod Touch -->
	<icon src="themes/images/icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="themes/images/icon-114.png" gap:platform="ios" width="114" height="114" />

	<!-- iPad -->
	<icon src="themes/images/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="themes/images/icon-144.png" gap:platform="ios" width="144" height="144" />

	<!-- iPhone Spotlight and Settings Icon -->
	<icon src="themes/images/icon-29.png" gap:platform="ios" width="29" height="29" />
	<icon src="themes/images/icon-58.png" gap:platform="ios" width="58" height="58" />

	<!-- iPad Spotlight and Settings Icon -->
	<icon src="themes/images/icon-50.png" gap:platform="ios" width="50" height="50" />
	<icon src="themes/images/icon-100.png" gap:platform="ios" width="100" height="100" />


	
	<!-- iPhone and iPod touch -->
	<gap:splash src="splash.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="themes/images/splash/640x960.png" gap:platform="ios" width="640" height="960" />

	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="themes/images/splash/640x1136.png" gap:platform="ios" width="640" height="1136" />

	<!-- iPhone 6 -->
	<gap:splash src="themes/images/splash/750x1334.png" gap:platform="ios" width="750" height="1334" />
	

	<!-- iPad -->
	<gap:splash src="themes/images/splash/768x1024.png" gap:platform="ios" width="768" height="1024" />
	
	<gap:plugin name="com.jmi2.cordova.geolocation" version="0.3.15" />
	 <!-- <gap:plugin name="org.apache.cordova.geolocation" version="0.3.7" />-->
	<gap:plugin name="org.apache.cordova.inappbrowser" />
	<plugin name="mobi.moica.whatsapp" spec="0.0.1" source="pgb" />
 <!--	
    <gap:plugin name="com.yongsun.cordova.geolocation" version="0.3.12" />
 
  <gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.8.1" />
  <gap:plugin name="com.footprint.cordova.plugin.local-notification" version="0.8.0" />-->
</widget>
